@using X.PagedList
@using X.PagedList.Mvc.Core
@model IPagedList<EntityLayer.Concrete.Category>
@{ 
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<br />
<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Category Name</th>
        <th>Make Passive</th>
        <th>Make Active</th>
        <th>Edit</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <th>@item.CategoryId</th>
            <td>@item.CategoryName</td>
            <td><a  href="/Admin/Category/CategoryDelete/@item.CategoryId/" id="DeleteBtn" onclick="return confirm('Are You Sure Want To Delete?');" class="btn btn-danger">Make Passive</a></td>
            <td><a href="#" class="btn btn-primary">Make Active</a></td>
            <td><a href="#" class="btn btn-info">Edit</a></td>
        </tr>
    }
</table>
<a href="/Admin/Category/AddCategory/" class="btn btn-warning">New Category</a>
<br /><br />
@Html.PagedListPager((IPagedList)Model,page=>Url.Action("Index",new { page }))


